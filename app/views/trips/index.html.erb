<h2>Welcome, <%= current_user.email %></h2>
<h1>Your Trips</h1>
<hr />
<br />

<%= link_to "Add Trip", new_trip_path %>
<br />
<br />
<br />

<div class="ui grid container">
<div class="ui cards">
<% @trips.each do |trip| %>
          <div class="card">
            <div class="content">
               <img class="right floated mini ui image" 
               src="https://cdn5.vectorstock.com/i/1000x1000/12/44/cartoon-travel-plane-doodle-lettering-for-vector-23431244.jpg">
              <div class="header">
                <i><%= link_to trip.name, trip_path(trip) %></i>
              </div>
              <hr />
              <div class="meta">
                <%= link_to 'Locations', trip_locations_path(trip, [:id]) %>
              </div>
              <br />
              <br />
              <div class="description">
              This will be the description
              </div>
            </div>
      
            <div class="extra content">
              <div class="ui two buttons">
                <div class="ui basic green button">
                  <%= link_to 'Edit', edit_trip_path(trip) %>
                </div>
                <div class="ui basic red button">
                  <%= link_to 'Delete', trip_path(trip), method: :delete, data: { confirm: 'Are you sure you want to delete this trip?' } %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div


    
       
      
      